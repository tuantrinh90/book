<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_background_radius_component"
        android:elevation="@dimen/elevation"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/radius_component"
        app:cardElevation="@dimen/elevation"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_video_item_height"
            android:layout_gravity="center"
            android:background="@drawable/bg_null_gray_selector"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_circle_blue"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivClear"
            style="@style/IconNormal"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/padding_small"
            android:background="@drawable/bg_null_gray_selector"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_circle_black"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />
    </androidx.cardview.widget.CardView>
</LinearLayout>